<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- // 게시글 목록 조회(페이징) List<BoardResponse> selectBoardList(@Param("start") 
	int start, @Param("end") int end); // 전체 게시글 개수 조회 int countBoard(); //게시글 
	단건 조회 BoardResponse selectBoardById(@Param("id") Long id); //게시글 등록 int insertBoard(BoardRequest 
	request); //게시글 수정 int updateBoard(BoardRequest request); //게시글 삭제 int deleteBoard(@Param("id") 
	Long id); -->
<mapper namespace="com.example.demo.mapper.BoardMapper">
	<!-- 게시글 전체 목록 조회(페이징) -->
	<select id="selectBoardList"
		resultType="com.example.demo.dto.BoardResponse">
		SELECT * FROM (
		SELECT ROWNUM rnum, b.* FROM (
		SELECT * FROM board ORDER BY id DESC
		) b
		WHERE ROWNUM &lt;= #{end}
		)
		WHERE rnum &gt; #{start}
	</select>
	<!-- 전체 개수 -->
	<select id="countBoard" resultType="int">
		SELECT COUNT(*) FROM board
	</select>
	<!-- 단건 조회 -->
	<select id="selectBoardById"
		resultType="com.example.demo.dto.BoardResponse">
		SELECT * FROM board WHERE id = #{id}
	</select>
	<!-- 게시글 등록 -->
	<insert id="insertBoard"
		parameterType="com.example.demo.dto.BoardRequest">
		<selectKey keyProperty="id" resultType="long" order="BEFORE">
			SELECT
			board_seq.NEXTVAL FROM dual
		</selectKey>
		INSERT INTO board (id, title, writer, content, created_at)
		VALUES (board_seq.NEXTVAL, #{title}, #{writer}, #{content, jdbcType=CLOB},
		SYSDATE)
	</insert>
	<!-- 게시글 수정 -->
	<update id="updateBoard"
		parameterType="com.example.demo.dto.BoardRequest">
		UPDATE board
		SET title = #{title},
		content = #{content, jdbcType=CLOB}
		WHERE id = #{id}
	</update>
	<!-- 게시글 삭제 -->
	<delete id="deleteBoard" parameterType="long">
		DELETE FROM board WHERE id = #{id}
	</delete>
</mapper>